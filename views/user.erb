<head>
  <title>Homepage</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href='//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/css/bootstrap-combined.min.css' rel='stylesheet' />
  <style>
    body {
      background-color: darkslateblue;
      color: white;
      padding: 0;
    }

    div, h4, h3 {
      padding-left: 1vw;
      padding-right: 1vw;
    }

    div.header {
      width: 98vw;
      height: 8vh;
      display: flex;
      align-items: center;
      background-color: slateblue;
    }

    div.list-wrapper {
      margin: 2vh auto 4vh auto;
      max-height: 40vh;
      overflow-y: auto;
      max-width: 600px;
    }

    li {
      font-size: 15px;
      margin: 0.5rem;
      border: 1px solid ghostwhite;
      border-radius: 3px;
      padding: 0.5rem;
      background-color: #40367d;
    }

    a {
      color: white;
      background-color: slateblue;
      border-radius: 5px;
      font-size: 17px;
      padding: 0.5rem;
      transition: 0.3s;
      text-decoration: underline;
    }
  </style>
</head>

<body>
  <div class="header">
    <a href="/">Home</a>
  </div>

  <h3><%= @user.name %>'s absences</h3>

  <% if @start_date %>
    <h4>Since: <%= @start_date %></h4>
  <% end %>

  <% if @end_date %>
    <h4>Until: <%= @end_date %></h4>
  <% end %>

  <h4 class="text-center">Confirmed absences</h4>
  <div class="d-flex flex-column flex-lg-row justify-content-around list-wrapper">
    <ul>
      <% if !@confirmed_absences.empty? %>
        <% @confirmed_absences.each do |abs| %>
          <li>
            Duration: from <%= abs.start_date %> to <%= abs.end_date %><br>
            Reason: <%= abs.type %>
          </li>
        <% end %>
      <% else %>
        <li>This user has no confirmed absences <%= @start_date || @end_date ? "for this time period" : nil %>.</li>
      <% end %>
    </ul>
  </div>

  <h4 class="text-center">Pending absences</h4>
  <div class="d-flex flex-column flex-lg-row justify-content-around list-wrapper">
    <ul>
      <% if !@pending_absences.empty? %>
        <% @pending_absences.each do |abs| %>
          <li>
            Duration: from <%= abs.start_date %> to <%= abs.end_date %><br>
            Reason: <%= abs.type %>
          </li>
        <% end %>
      <% else %>
        <li>This user has no pending absences <%= @start_date || @end_date ? "for this time period" : nil %>.</li>
      <% end %>
    </ul>
  </div>
</body>
